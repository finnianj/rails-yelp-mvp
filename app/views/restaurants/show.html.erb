<div class="container my-3 text-center">
  <div class="container row my-3">
    <div class="container my-3 item">
      <h1> <%=@restaurant.name %> </h1>
      <p> Address: <%=@restaurant.address %> </p>
      <p> Cuisine: <%=@restaurant.category %> </p>
      <p> Phone: <%=@restaurant.phone_number %> </p>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%=review.rating%>/5. <%= review.content %>
              <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </li>
            <% end %>
            <br>
      <%= link_to "Back", restaurants_path, class:"btn btn-primary"%>
      <br>
      <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>
      <br>
      <%= link_to "Delete Restaurant", restaurant_path(@restaurant), class:"btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </ul>
    </div>
  </div>
</div>
